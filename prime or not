#include <stdio.h>

Void main() {
    int n, i= 0;
    printf("Enter a positive integer: ");
    scanf("%d", &n);
    if (n <= 1) {
        printf("%d is not a prime number.\n", n);
        return 0;
    }
    for (i = 2; i <= n / 2; ++i) {
        if (n % i == 0) {
            break;
        }
        printf("%d is a prime number.\n", n);
    else
        printf("%d is not a prime number.\n", n);

    return 0;
}
